pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git url: 'https://github.com/NAGAGIT1/php-deploy.git', credentialsId: 'git-id'
            }
        }

        stage('Deploy') {
            steps {
                sh 'sudo rm -rf /var/www/html/*'
                sh 'sudo cp -r * /var/www/html/'
            }
        }
    }
}
